{% extends 'base.html.twig' %}

{% block breadcrumb %}
  {% set entries = [{
    label: 'Traduire',
    url: path('app_translate'),
  }, {
    label: pack,
  }] %}
  {{ parent() }}
{% endblock breadcrumb %}

{% block body %}
  <h1 class="mt-3">Traduction du pack <strong>{{ pack }}</strong></h1>

  {{ form_start(form) }}
  <div class="input-group mb-3">
    {{ form_widget(form.term) }}

    <div class="input-group-text">
      {{ form_widget(form.only_untranslated) }}
      {{ form_label(form.only_untranslated) }}
    </div>

    <button class="btn btn-primary" type="submit">Filtrer</button>
  </div>
  {{ form_end(form) }}

  {{ include('translate/_terms-table.html.twig', {
    display_pack: false,
    redirect: path('app_translate_pack', { pack: pack }),
  }) }}
{% endblock body %}
